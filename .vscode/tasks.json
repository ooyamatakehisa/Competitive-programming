{
    "tasks": [
        {
            "type": "shell",
            "label": "g++-7 build active file",
            "group": {
              "kind": "build",
              "isDefault": true
            },
            "command": "/usr/bin/g++",
            "args": [
              "-g",
              "-O0",
              "-std=c++14",
              "${file}",
              "-o",
              "${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "problemMatcher": [
              "$gcc"
            ]
        }
       
    ],
    "version": "2.0.0"
}